<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="lp.JavaFxClient.controllers.StudentsController"
      spacing="10" style="-fx-padding: 10;">

    <HBox spacing="10">
        <Label text="Students" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#onRefresh"/>
        <Button text="Add"     onAction="#onAddStudent"/>
        <Button text="Edit"    onAction="#onEditStudent"/>
    </HBox>

    <TableView fx:id="studentsTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol"    text="ID"    prefWidth="60"/>
            <TableColumn fx:id="nameCol"  text="Name"  prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
