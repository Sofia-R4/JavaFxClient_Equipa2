<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="475.0" prefWidth="547.0" spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFxClient.controllers.StudentsController">

    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Students" />
        <Pane prefHeight="93.0" prefWidth="105.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#onRefresh" text="Refresh">
         <cursor>
            <Cursor fx:constant="WAIT" />
         </cursor></Button>
        <Button onAction="#onAddStudent" text="Add" />
        <Button onAction="#onEditStudent" text="Edit" />
    </HBox>

    <TableView fx:id="studentsTable" prefHeight="379.0" prefWidth="488.0">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
            <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
            <TableColumn fx:id="emailCol" prefWidth="200" text="Email" />
         <TableColumn fx:id="numCol" prefWidth="75.0" text="Numero de aluno" />
        </columns>
    </TableView>
</VBox>
